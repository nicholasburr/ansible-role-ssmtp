{% else %}
#TLS_CA_FILE=
{% endif %}
{% if ssmpt_tls_ca_dir is defined %}
TLS_CA_Dir={{ ssmpt_tls_ca_dir }}
{% else %}
#TLS_CA_Dir=
{% endif %}

# Username/Password
{% if ssmtp_auth_user is defined %}
AuthUser={{ ssmtp_auth_user }}
{% else %}
#AuthUser=
{% endif %}
{% if ssmtp_auth_pass is defined %}
AuthPass={{ ssmtp_auth_pass }}
{% else %}
#AuthPass=
{% endif %}
{% if ssmtp_auth_method is defined %}
