{% if ssmtp_use_tls is defined %}
UseTLS={{ ssmtp_use_tls }}
{% else %}
#UseTLS=
{% endif %}
{% if ssmtp_use_starttls is defined %}
UseStartTLS={{ ssmtp_use_starttls }}
{% else %}
#UseSTARTTLS=
{% endif %}
{% if ssmpt_tls_cert is defined %}
TLSCert={{ ssmpt_tls_cert }}
{% else %}
