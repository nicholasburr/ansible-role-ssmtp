root={{ ssmtp_root_email }}
mailhub={{ ssmtp_mailhub }}
hostname={{ ssmtp_hostname }}
{% if ssmtp_rewrite_domain is defined %}
rewriteDomain={{ ssmtp_rewrite_domain }}
{% else %}
#rewriteDomain=
{% endif %}
{% if ssmtp_from_line_override is defined %}
